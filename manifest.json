{
  "name": "@deskpro-apps/mailchimp",
  "title": "Mailchimp",
  "description": "Link Deskpro user profiles to Mailchimp contacts so agents can see which audiences and campaigns users are subscribed to",
  "appStoreUrl": "https://www.deskpro.com/product-embed/apps/mailchimp",
  "version": "1.0.20",
  "scope": "agent",
  "isSingleInstall": true,
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "targets": [{ "target": "user_sidebar", "entrypoint": "index.html" }],
  "settings": {
    "use_deskpro_saas": {
      "title": "One-Click Installation",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "default": true,
      "order": 1
    },
    "use_api_key": {
      "title": "Use API Key",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "default": false,
      "condition": "settings.use_deskpro_saas != true",
      "order": 2
    },
    "domain": {
      "title": "Domain",
      "description": "Your Mailchimp API subdomain, e.g. \"us20\"",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "order": 3
    },
    "api_key": {
      "title": "API Key",
      "description": "Your Mailchimp API key",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true",
      "order": 4
    },
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 5
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 6
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/callback",
        "height": "100px"
      },
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 7
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://(.*).api.mailchimp.com/.*",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "timeout": 30
      }
    ]
  }
}